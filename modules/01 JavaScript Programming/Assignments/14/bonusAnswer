var favoriteColors = ['green', 'blue', 'black', '#66ccff', '#ccffcc'];
var colorNum = 0;
var suffix = '';  // 1 = 'st', 2 = 'nd', 3 = 'rd', 4-20 = 'th' 

favoriteColors.forEach ( color => {
	colorNum++;

	if (colorNum === 1) suffix = 'st';
	else if (colorNum === 2) suffix = 'nd';
	else if (colorNum === 3) suffix = 'rd';
	else if (colorNum >= 4 || colorNum <= 20) suffix = 'th';

	console.log(`My ${colorNum}${suffix} choice is ${favoriteColors[colorNum-1]}`);
});  
